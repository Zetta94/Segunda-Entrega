<div class="categories">
    {{#if categoryArray}}
        <div>
            {{#each categoryArray}}
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <div class="input-group-text">
                            <input type="checkbox" aria-label="Checkbox for following text input">
                        </div>
                    </div>
                    <span>{{this}}</span>
                </div>
            {{/each}}
        </div>
    {{/if}}
</div>